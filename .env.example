# Example environment variables for FastAPI Real-Time Chat
# Copy to .env and edit before running in development/production

# Secret key used to sign JWTs. Replace with a secure random value.
SECRET_KEY=replace-this-with-a-secure-random-string

# Algorithm used for JWT
ALGORITHM=HS256

# Token expiration in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database URL (relative path to sqlite in this project)
DATABASE_URL=sqlite+aiosqlite:///./chat.db
